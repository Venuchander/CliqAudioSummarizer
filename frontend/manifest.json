{
  "manifest_version": 3,
  "name": "Zoho Cliq Audio Summarizer",
  "version": "1.0",
  "description": "Summarizes Zoho Cliq audio conversations.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
